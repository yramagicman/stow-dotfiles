#!/bin/sh

sudo zypper in libXtst-devel ruby-devel python-devel python-devel python3-devel lua53-devel gtk2-devel libXt-devel libXpm-devel
cd /tmp || exit
git clone --depth 4 https://github.com/vim/vim.git
cd vim || exit
./configure --with-features=huge \
            --enable-multibyte \
            --enable-rubyinterp=yes \
            --enable-pythoninterp=yes \
            --enable-python3interp=yes \
            --enable-perlinterp=yes \
            --enable-luainterp=yes \
            --enable-gui=gtk2 \
            --enable-cscope
make
sudo make install
rm -rf /tmp/vim

sudo zypper rm -u libXtst-devel ruby-devel python-devel python-devel python3-devel lua53-devel gtk2-devel libXt-devel libXpm-devel
